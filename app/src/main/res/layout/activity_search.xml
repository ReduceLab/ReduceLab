<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <ImageButton
        android:id="@+id/btnCanecaCrema"
        android:layout_width="108dp"
        android:layout_height="145dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="66dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitXY"
        android:scaleX="1.32"
        android:scaleY="1.17"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCanecaVerde"
        app:srcCompat="@drawable/caneca_crema" />

    <ImageButton
        android:id="@+id/btnCanecaAzul"
        android:layout_width="70dp"
        android:layout_height="96dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="452dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitXY"
        android:scaleX="1.32"
        android:scaleY="1.17"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCanecaGris"
        app:srcCompat="@drawable/caneca_azul" />

    <ImageButton
        android:id="@+id/btnCanecaGris"
        android:layout_width="70dp"
        android:layout_height="96dp"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="452dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitXY"
        android:scaleX="1.32"
        android:scaleY="1.17"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCanecaAzul"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/caneca_gris" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnSearchAtras"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="fitXY"
            android:scaleX="2.5"
            android:scaleY="3"
            app:srcCompat="@drawable/btn_atras" />

        <Spinner
            android:id="@+id/spinId"
            android:layout_gravity="center"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/btnCanecaVerde"
        android:layout_width="105dp"
        android:layout_height="150dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitXY"
        android:scaleX="1.32"
        android:scaleY="1.17"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCanecaCrema"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/caneca_verde" />

    <TextView
        android:id="@+id/txtView_infoCanecas"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="107dp"

        android:layout_marginEnd="106dp"

        android:layout_marginBottom="244dp"
        android:background="#00FFFFFF"
        android:fontFamily="monospace"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:textColor="#505050"
        android:textSize="17.5sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="390dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="655dp"
        android:fontFamily="sans-serif"
        android:includeFontPadding="true"
        android:text="Â¡Explora presionando las canecas o entrando al edificio!"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnPuerta"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="97dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitXY"
        android:scaleX="2.9"
        android:scaleY="1.85"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/puerta_boton" />

</androidx.constraintlayout.widget.ConstraintLayout>